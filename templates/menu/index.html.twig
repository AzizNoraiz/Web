{% extends 'base.html.twig' %}

{% block title %}Casino Royal | Le Salon d'Élite{% endblock %}

{% block body %}
<div class="bg-casino min-vh-100 py-5 position-relative d-flex align-items-center" style="background: radial-gradient(circle, #1a1a1a 0%, #000000 100%); overflow: hidden;">

    <div class="position-absolute top-0 end-0 p-4 d-flex align-items-center gap-3" style="z-index: 1000;">
        <div class="text-end">
            <div class="text-white-50 fw-bold text-uppercase small" style="letter-spacing: 2px;">{{ app.user.username|default('Membre Gold') }}</div>
            <div class="text-warning fw-bold fs-3" style="text-shadow: 0 0 10px rgba(255, 140, 0, 0.5);">
                5 000 <small class="text-white-50" style="font-size: 0.5em;">JETONS</small>
            </div>
        </div>
        <a href="/depotretrait" class="btn-add-funds shadow-lg">
            <span>+</span>
        </a>
    </div>

    <div class="container">
        <div class="text-center mb-5">
            <h1 class="display-1 fw-bold text-uppercase mb-2 text-warning"
                style="text-shadow: 0px 0px 30px rgba(255, 0, 0, 0.8); font-size: calc(2.5rem + 5vw); letter-spacing: -2px;">
                Casino Royal
            </h1>
            <div class="d-flex justify-content-center align-items-center gap-3">
                <div style="height: 1px; width: 80px; background: linear-gradient(to right, transparent, #ff8c00);"></div>
                <p class="text-white-50 text-uppercase mb-0 fw-light" style="letter-spacing: 8px; font-size: 0.9rem;">Salon Privé</p>
                <div style="height: 1px; width: 80px; background: linear-gradient(to left, transparent, #ff8c00);"></div>
            </div>
        </div>

        <div class="row g-5 justify-content-center mt-2">
            
            <div class="col-12 col-lg-4">
                <div class="neon-card gold-glow">
                    <div class="card-inner text-center">
                        <div class="game-icon text-warning">777</div>
                        <h2 class="h4 text-white fw-bold text-uppercase mb-3">Le Jackpot</h2>
                        <p class="text-white-50 small mb-4">La machine mythique. Aligne les sept et décroche l'or.</p>
                        <a href="/jeu777" class="btn-play gold">ENTRER</a>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="neon-card red-glow">
                    <div class="card-inner text-center">
                        <div class="game-icon text-danger">x2</div>
                        <h2 class="h4 text-white fw-bold text-uppercase mb-3">Double Mise</h2>
                        <p class="text-white-50 small mb-4">Pile ou face moderne. La chance sourit aux audacieux.</p>
                        <a href="/jeuquitteoudouble" class="btn-play red">ENTRER</a>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="neon-card blue-glow">
                    <div class="card-inner text-center">
                        <div class="game-icon text-info">B</div>
                        <h2 class="h4 text-white fw-bold text-uppercase mb-3">Bingo Royal</h2>
                        <p class="text-white-50 small mb-4">Le tirage de la cour. Choisis tes chiffres, attend le destin.</p>
                        <a href="/jeubingo" class="btn-play blue">ENTRER</a>
                    </div>
                </div>
            </div>

        </div>

        <div class="text-center mt-5 pt-4">
            <a href="/home" class="text-white-50 text-decoration-none small exit-btn">QUITTER LE SALON</a>
        </div>
    </div>
</div>

<style>
    /* NÉONS ANIMÉS AUTOUR DES CADRES */
    .neon-card {
        position: relative;
        background: rgba(0, 0, 0, 0.8);
        border-radius: 20px;
        padding: 2px; /* Largeur du néon */
        overflow: hidden;
        transition: 0.3s ease-in-out;
    }

    /* L'effet de néon tournant */
    .neon-card::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        animation: rotate-neon 4s linear infinite;
        z-index: 1;
    }

    /* Couleurs spécifiques des néons */
    .gold-glow::before { background: conic-gradient(#ff8c00, transparent, #ffc107, transparent, #ff8c00); }
    .red-glow::before { background: conic-gradient(#ff4500, transparent, #ff0000, transparent, #ff4500); }
    .blue-glow::before { background: conic-gradient(#0dcaf0, transparent, #007bff, transparent, #0dcaf0); }

    @keyframes rotate-neon {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .card-inner {
        position: relative;
        background: #0a0a0a;
        border-radius: 18px;
        padding: 40px 20px;
        z-index: 2;
        height: 100%;
    }

    /* ANIMATIONS AU SURVOL (SANS BOUGER LE CADRE) */
    .neon-card:hover {
        box-shadow: 0 0 30px rgba(255, 140, 0, 0.4);
    }
    
    .gold-glow:hover { box-shadow: 0 0 40px rgba(255, 193, 7, 0.5); }
    .red-glow:hover { box-shadow: 0 0 40px rgba(255, 69, 0, 0.5); }
    .blue-glow:hover { box-shadow: 0 0 40px rgba(13, 202, 240, 0.5); }

    .neon-card:hover .game-icon {
        transform: scale(1.1);
        filter: brightness(1.5) drop-shadow(0 0 10px currentColor);
    }

    .game-icon {
        font-size: 5rem;
        font-weight: 900;
        margin-bottom: 10px;
        transition: 0.3s;
    }

    /* BOUTONS ET ACCESSOIRES */
    .btn-play {
        display: block;
        text-decoration: none;
        font-weight: 800;
        padding: 12px;
        border-radius: 50px;
        transition: 0.3s;
        color: white;
    }
    .btn-play.gold { background: #ff8c00; box-shadow: 0 5px 15px rgba(255, 140, 0, 0.3); }
    .btn-play.red { background: #ff4500; box-shadow: 0 5px 15px rgba(255, 69, 0, 0.3); }
    .btn-play.blue { background: #0dcaf0; color: black; box-shadow: 0 5px 15px rgba(13, 202, 240, 0.3); }

    .btn-play:hover {
        transform: translateY(-3px);
        filter: brightness(1.2);
        box-shadow: 0 0 20px currentColor;
    }

    .btn-add-funds {
        background: linear-gradient(45deg, #ff4500, #ff8c00);
        width: 45px; height: 45px; border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        color: white; text-decoration: none; font-weight: bold; font-size: 1.5rem;
        transition: 0.3s;
    }
    .btn-add-funds:hover { transform: scale(1.1) rotate(90deg); }

    .exit-btn:hover { color: white !important; letter-spacing: 2px; transition: 0.4s; }
</style>
{% endblock %}