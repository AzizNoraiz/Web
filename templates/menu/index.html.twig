{% extends 'base.html.twig' %}

{% block title %}Casino Royal | Le Salon d'Élite{% endblock %}

{% block body %}
<div class="bg-casino min-vh-100 py-5 position-relative d-flex align-items-center" style="background: radial-gradient(circle, #1a1a1a 0%, #000000 100%); overflow: hidden;">


    <div class="position-absolute top-0 end-0 p-4 d-flex align-items-center gap-3">
        <div class="text-end">
            <div class="text-white-50 fw-bold text-uppercase small" style="letter-spacing: 1px;">
                {{ app.user.username|default('Joueur') }}
            </div>
            <div class="text-warning fw-bold fs-4">
                5 000 <small class="text-white-50" style="font-size: 0.6em;">jetons</small>
            </div>
        </div>
        <a href="/depotretrait" class="btn rounded-circle d-flex align-items-center justify-content-center shadow-lg"
            style="background: linear-gradient(45deg, #ff4500, #ff8c00); width: 45px; height: 45px; border: none; color: white; text-decoration: none;">
            <i class="fs-4 fw-bold">+</i>
        </a>
    </div>
    
    <div class="container">
        <h1 class="display-1 fw-bold text-uppercase text-center mb-5 text-warning"
            style="text-shadow: 0px 0px 20px rgba(255, 0, 0, 0.6);">
            Casino Royal
        </h1>

        <div class="row justify-content-center g-4">

            <div class="col-12 col-md-4">
                <div class="p-4 rounded-4 shadow-lg text-center h-100"
                    style="background: rgba(0, 0, 0, 0.7); border: 1px solid rgba(255, 140, 0, 0.3); border-top: 4px solid #ff8c00 !important;">
                    <h2 class="display-4 fw-bold text-warning mb-3">777</h2>
                    <h3 class="h5 text-white text-uppercase mb-4" style="letter-spacing: 2px;">Le 777</h3>
                    <p class="text-white-50 mb-4">La machine à sous légendaire du salon.</p>
                    <a href="/jeu777" class="btn rounded-pill fw-bold text-white w-100 py-2"
                        style="background: linear-gradient(45deg, #ff4500, #ff8c00); border: none;">
                        JOUER
                    </a>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="p-4 rounded-4 shadow-lg text-center h-100"
                    style="background: rgba(0, 0, 0, 0.7); border: 1px solid rgba(255, 140, 0, 0.3); border-top: 4px solid #ff4500 !important;">
                    <h2 class="display-4 fw-bold text-danger mb-3">x2</h2>
                    <h3 class="h5 text-white text-uppercase mb-4" style="letter-spacing: 2px;">Quitte ou Double</h3>
                    <p class="text-white-50 mb-4">Tout miser pour doubler la mise.</p>
                    <a href="/jeuquitteoudouble" class="btn rounded-pill fw-bold text-white w-100 py-2"
                        style="background: linear-gradient(45deg, #ff4500, #ff8c00); border: none;">
                        JOUER
                    </a>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="p-4 rounded-4 shadow-lg text-center h-100"
                    style="background: rgba(0, 0, 0, 0.7); border: 1px solid rgba(255, 140, 0, 0.3); border-top: 4px solid #ffc107 !important;">
                    <h2 class="display-4 fw-bold text-info mb-3">B</h2>
                    <h3 class="h5 text-white text-uppercase mb-4" style="letter-spacing: 2px;">Le Bingo</h3>
                    <p class="text-white-50 mb-4">Le tirage au sort royal pour gagner gros.</p>
                    <a href="/jeubingo" class="btn rounded-pill fw-bold text-white w-100 py-2"
                        style="background: linear-gradient(45deg, #ff4500, #ff8c00); border: none;">
                        JOUER
                    </a>
                </div>
            </div>

        </div>

        <div class="text-center mt-5 pt-4">
            <a href="/home" class="text-white-50 text-decoration-none small exit-btn">QUITTER LE SALON</a>
        </div>
    </div>
</div>

<style>
    /* NÉONS ANIMÉS AUTOUR DES CADRES */
    .neon-card {
        position: relative;
        background: rgba(0, 0, 0, 0.8);
        border-radius: 20px;
        padding: 2px; /* Largeur du néon */
        overflow: hidden;
        transition: 0.3s ease-in-out;
    }

    /* L'effet de néon tournant */
    .neon-card::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        animation: rotate-neon 4s linear infinite;
        z-index: 1;
    }

    /* Couleurs spécifiques des néons */
    .gold-glow::before { background: conic-gradient(#ff8c00, transparent, #ffc107, transparent, #ff8c00); }
    .red-glow::before { background: conic-gradient(#ff4500, transparent, #ff0000, transparent, #ff4500); }
    .blue-glow::before { background: conic-gradient(#0dcaf0, transparent, #007bff, transparent, #0dcaf0); }

    @keyframes rotate-neon {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .card-inner {
        position: relative;
        background: #0a0a0a;
        border-radius: 18px;
        padding: 40px 20px;
        z-index: 2;
        height: 100%;
    }

    /* ANIMATIONS AU SURVOL (SANS BOUGER LE CADRE) */
    .neon-card:hover {
        box-shadow: 0 0 30px rgba(255, 140, 0, 0.4);
    }
    
    .gold-glow:hover { box-shadow: 0 0 40px rgba(255, 193, 7, 0.5); }
    .red-glow:hover { box-shadow: 0 0 40px rgba(255, 69, 0, 0.5); }
    .blue-glow:hover { box-shadow: 0 0 40px rgba(13, 202, 240, 0.5); }

    .neon-card:hover .game-icon {
        transform: scale(1.1);
        filter: brightness(1.5) drop-shadow(0 0 10px currentColor);
    }

    .game-icon {
        font-size: 5rem;
        font-weight: 900;
        margin-bottom: 10px;
        transition: 0.3s;
    }

    /* BOUTONS ET ACCESSOIRES */
    .btn-play {
        display: block;
        text-decoration: none;
        font-weight: 800;
        padding: 12px;
        border-radius: 50px;
        transition: 0.3s;
        color: white;
    }
    .btn-play.gold { background: #ff8c00; box-shadow: 0 5px 15px rgba(255, 140, 0, 0.3); }
    .btn-play.red { background: #ff4500; box-shadow: 0 5px 15px rgba(255, 69, 0, 0.3); }
    .btn-play.blue { background: #0dcaf0; color: black; box-shadow: 0 5px 15px rgba(13, 202, 240, 0.3); }

    .btn-play:hover {
        transform: translateY(-3px);
        filter: brightness(1.2);
        box-shadow: 0 0 20px currentColor;
    }

    .btn-add-funds {
        background: linear-gradient(45deg, #ff4500, #ff8c00);
        width: 45px; height: 45px; border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        color: white; text-decoration: none; font-weight: bold; font-size: 1.5rem;
        transition: 0.3s;
    }
    .btn-add-funds:hover { transform: scale(1.1) rotate(90deg); }

    .exit-btn:hover { color: white !important; letter-spacing: 2px; transition: 0.4s; }
</style>
{% endblock %}