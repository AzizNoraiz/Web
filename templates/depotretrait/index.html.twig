{% extends 'base.html.twig' %}

{% block title %}Casino Royal | Banque{% endblock %}

{% block body %}
<div class="bg-casino d-flex flex-column justify-content-center align-items-center min-vh-100 py-5 position-relative">

    <div class="position-absolute top-0 end-0 p-4 text-end">
        <div class="text-white-50 fw-bold text-uppercase small">Votre Fortune</div>
        <div class="text-warning fw-bold fs-3">5 000 <small class="text-white-50" style="font-size: 0.6em;">jetons</small></div>
    </div>

    <div class="container">
        <h1 class="display-1 fw-bold text-uppercase text-center mb-5 text-warning"
            style="text-shadow: 0px 0px 20px rgba(255, 0, 0, 0.6);">
            La Banque
        </h1>

        <div class="row justify-content-center g-5">
            
            <div class="col-12 col-md-5">
                <div class="p-4 rounded-4 shadow-lg h-100" 
                     style="background: rgba(0, 0, 0, 0.7); border: 1px solid rgba(255, 140, 0, 0.3); border-top: 5px solid #28a745 !important;">
                    <h2 class="h3 text-white text-center mb-4 text-uppercase fw-bold" style="letter-spacing: 2px;">Dépôt</h2>
                    <p class="text-white-50 text-center small mb-4">Achetez des jetons pour jouer aux tables.</p>
                    
                    <form action="/depot" method="POST">
                        <div class="mb-4">
                            <label class="form-label small text-uppercase fw-bold" style="color: #ff8c00;">Montant à déposer (€)</label>
                            <input type="number" class="form-control bg-dark text-white border-0 py-3 px-4 shadow-none" 
                                   placeholder="Ex: 50" style="border-left: 3px solid #28a745 !important;">
                        </div>
                        <button type="submit" class="btn w-100 rounded-pill py-3 fw-bold text-white shadow-lg border-0"
                                style="background: linear-gradient(45deg, #218838, #28a745);">
                            ACHETER DES JETONS
                        </button>
                    </form>
                </div>
            </div>

            <div class="col-12 col-md-5">
                <div class="p-4 rounded-4 shadow-lg h-100" 
                     style="background: rgba(0, 0, 0, 0.7); border: 1px solid rgba(255, 140, 0, 0.3); border-top: 5px solid #ff4500 !important;">
                    <h2 class="h3 text-white text-center mb-4 text-uppercase fw-bold" style="letter-spacing: 2px;">Retrait</h2>
                    <p class="text-white-50 text-center small mb-4">Encaissez vos gains vers votre compte.</p>
                    
                    <form action="/retrait" method="POST">
                        <div class="mb-4">
                            <label class="form-label small text-uppercase fw-bold" style="color: #ff8c00;">Jetons à retirer</label>
                            <input type="number" class="form-control bg-dark text-white border-0 py-3 px-4 shadow-none" 
                                   placeholder="Ex: 1000" style="border-left: 3px solid #ff4500 !important;">
                        </div>
                        <button type="submit" class="btn w-100 rounded-pill py-3 fw-bold text-white shadow-lg border-0"
                                style="background: linear-gradient(45deg, #ff4500, #ff8c00);">
                            ENCAISSER LES GAINS
                        </button>
                    </form>
                </div>
            </div>

        </div>

        <div class="text-center mt-5">
            <a href="/menu" class="btn btn-outline-warning rounded-pill px-5 py-2 fw-bold text-uppercase" style="font-size: 0.9rem;">
                Retour au Salon
            </a>
        </div>
    </div>
</div>
{% endblock %}